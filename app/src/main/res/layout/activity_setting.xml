<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.schoolshop.ui.SettingActivity">

    <include layout="@layout/common_toolbar" />

    <TextView
        android:id="@+id/tv_password_reset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:drawablePadding="@dimen/dp_8"
        android:drawableRight="@mipmap/icon_my_orderdetile"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_8"
        android:paddingStart="@dimen/dp_20"
        android:text="密码修改"
        android:textColor="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:drawablePadding="@dimen/dp_8"
        android:drawableRight="@mipmap/icon_my_orderdetile"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_8"
        android:paddingStart="@dimen/dp_20"
        android:text="身份认证"
        android:textColor="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_runhelper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:drawablePadding="@dimen/dp_8"
        android:drawableRight="@mipmap/icon_my_orderdetile"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_8"
        android:paddingStart="@dimen/dp_20"
        android:text="参加跑腿兼职"
        android:textColor="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:drawablePadding="@dimen/dp_8"
        android:drawableRight="@mipmap/icon_my_orderdetile"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_8"
        android:paddingStart="@dimen/dp_20"
        android:text="意见反馈"
        android:textColor="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:drawablePadding="@dimen/dp_8"
        android:drawableRight="@mipmap/icon_my_orderdetile"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_8"
        android:paddingStart="@dimen/dp_20"
        android:text="关于校园V商城"
        android:textColor="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="#fafafa" />

    <Button
        android:id="@+id/btn_login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_btn_login"
        android:text="注销登录"
        android:textColor="#fff" />
</LinearLayout>
